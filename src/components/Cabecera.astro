---
import Navegacion from "./Navegacion.astro";

const enlace = [['about', 'About'], ['posts/post01', '1st Post'], ['posts/post02', '2nd Post'], ['posts/post03', '3rd Post'], ['tags/astro', 'Tags']];
---

<div class="nav">
    <img src="/icon.png">
      <Navegacion
    enlace={enlace}
    />
    </div>

    <style>

img{
        width: 80px;
        margin-right: 20px ;
    }
    .nav{
        display: flex;
        align-items: center;
        justify-content: space-between;
       
  background-color: rgb(237, 234, 240);
  text-align: center;
  border-bottom: dashed blueviolet 2px;
    }
    .nav:hover{
      background-color: #f9e8e8;
    }
    </style>