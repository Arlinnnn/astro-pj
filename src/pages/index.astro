---
import Layout from '../Layouts/Layout.astro';
import IslaInteractiva from '../components/IslaInteractiva.jsx';
const islas = [
  { titulo: 'Arts and Humanities', icono: '/arts.png', descripcion: 'Explora disciplinas como historia, filosofía y arte.' },
  { titulo: 'Rhythmic Gymnastics', icono: '/gymnastics.png', descripcion: 'Una combinación de danza y gimnasia con movimientos fluidos.' },
  { titulo: 'Design', icono: '/design.png', descripcion: 'Diseño gráfico, industrial y de moda.' },
  { titulo: 'Cooking', icono: '/cooking.png', descripcion: 'Recetas y técnicas culinarias para todos los gustos.' },
];
const identidad = {
  nombre: "Arlin",
  apellido: "Espinal",
  pais: "Dom. Rep. ",
  hobbies: ["workout", "paint", "watch films", "comics"],
};

const habilidades = ["arts and humanities", "rhythmic gymnastics", "design", "cocina"];
const habilidadColor = 'purple';
---

<Layout>
    <main>
      <div>
		   <h2>Presentation</h2>
        <ul>
           <li>My name is {identidad.nombre}</li>
		       <li>I am from {identidad.pais}</li>
        </ul>
        <p>My favorite hobbies are:</p>
       <ol>
          <li>{identidad.hobbies[0]}</li>
          <li>{identidad.hobbies[1]}</li>
          <li>{identidad.hobbies[2]}</li>
          <li>{identidad.hobbies[3]}</li>
		   </ol>
       <p>I studied ... and I have knowledge in:</p>
       <div class="islas-container">
        {islas.map((isla) => (
          <IslaInteractiva 
            icono={isla.icono} 
            titulo={isla.titulo} 
            descripcion={isla.descripcion} 
            client:load 
          />
        ))}
       </div>
        <!-- <ul>
          {habilidades.map((habilidad) => <li class="habilidad">{habilidad}</li>)} -->
          <!-- <li>{habilidades[1]}</li>
          <li>{habilidades[2]}</li> -->
        <!-- </ul> -->
     </div>
    </main>
   
  
  </Layout> 


<style define:vars = {{habilidadColor}} >
    .habilidad{
      color:greenyellow;
      color: var(--habilidadColor);
      font-weight: 600;
    }


  .islas-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 20px;
  }

</style>